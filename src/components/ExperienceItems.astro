---
 interface Props {
  title: string;
  date: string;
  description: string;
  link: string;
  badge: string;
}

const {title, date, description, link, badge} = Astro.props

import BadgeExperience from './BadgeExperience.astro'
---

<div class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-gray-700"></div>
<div class="flex gap-x-3 items-center">
    <h3 class="text-xl font-semibold text-blue-300 dark:text-white">{title}</h3>
    <BadgeExperience> {badge}</BadgeExperience>
</div>
    <time class=" text-sm font-normal leading-none text-gray-400 dark:text-gray-500">{date}</time>
    <p class="my-4 text-base font-normal text-gray-300 dark:text-gray-400 text-pretty">{description}</p>
    
    <a href={link} target="_blank" class="inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-sky-700 border border-sky-400 rounded-lg hover:bg-sky-200/40 hover:text-blue-800 transition-all dark:bg-blue-800 dark:text-white dark:border-blue-600 dark:hover:text-blue-600 dark:hover:bg-blue-800/40">
        Learn more
        <svg class="w-3 h-3 ms-2 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
        </svg>
    </a>
    </svg></a>