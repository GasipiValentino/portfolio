---
import "@fontsource-variable/onest"
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const {title} = Astro.props
const {description} = Astro.props
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="description" content={description} />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="">
		<div class="absolute top-0 z-[-2] h-screen w-screen bg-white bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))] block"></div>
		<div class="absolute top-0 z-[-1] h-screen w-screen bg-black bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))] hidden dark:block"></div>
		<Header />
		<slot />
		<Footer/>
	</body>
</html>

<style is:global>
:root{
	color-scheme: light dark
}

*{
	margin: 0;
	padding: 0;
	box-sizing: border-box;
}


html{
	font-family: 'Onest Variable';
	scroll-behavior: smooth;
	overflow-x: hidden;
}

body{
	min-height: 100vh;
}

@media(prefers-reduced-motion: reduce){
	html{
		scroll-behavior: auto;
	}
}
</style>
